#include <iostream>
#include <cstdlib>
#include <ctime>
#include <vector>
#include <map>
#include <string>
#include <algorithm>
using namespace std;

// Clase Casilla
class Casilla {
private:
    bool tieneBandera; // Indica si la casilla tiene una bandera
    vector<string> jugadores; // Nombres de los jugadores en la casilla
    const int maxJugadores = 4; // Máximo de jugadores por casilla

public:
    Casilla() : tieneBandera(false) {}

    void colocarBandera() {
        tieneBandera = true;
    }

    bool esBandera() const {
        return tieneBandera;
    }

    bool agregarJugador(const string& nombreJugador) {
        if (jugadores.size() < maxJugadores) {
            jugadores.push_back(nombreJugador);
            return true;
        } else {
            cout << "La casilla ya está llena (máximo 4 jugadores).\n";
            return false;
        }
    }

    bool removerJugador(const string& nombreJugador) {
        auto it = find(jugadores.begin(), jugadores.end(), nombreJugador); // Usar find correctamente
        if (it != jugadores.end()) {
            jugadores.erase(it);
            return true;
        }
        cout << "El jugador no está en esta casilla.\n";
        return false;
    }

    void listarJugadores() const {
        if (jugadores.empty()) {
            cout << "La casilla está vacía.\n";
            return;
        }
        cout << "Jugadores en la casilla:\n";
        for (const auto& jugador : jugadores) {
            cout << "- " << jugador << endl;
        }
    }

    vector<string>& obtenerJugadores() {
        return jugadores;
    }
};
